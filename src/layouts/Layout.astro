---
const { title } = Astro.props;
import CambiarTema from '../components/theme.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-cyan-50 dark:bg-gray-800 min-h-screen min-w-screen overflow-hidden">
		<slot />
		<CambiarTema />
	</body>
</html>
